<h1>New Reminder</h1>

<%= form_for @reminder do |f| %>
  <br>

  <%= f.text_field :description %>
  <br>
  <%= f.date_field :remind_at %>
  <br>
  <%= f.select(:kind, Reminder.kinds.keys.map {|role| [role.titleize,role]}) %>
  <br>
  <div class="actions">
  <br>
  <%= submit_tag 'Submit', class: 'btn btn-success' %>
  </div>
<% end %>


<%= link_to 'Back', reminders_path %>
